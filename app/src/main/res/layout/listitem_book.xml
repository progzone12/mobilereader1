<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_bookpreview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView_bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageView_bookpreview"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_authorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_bookpreview"
        android:layout_alignLeft="@+id/textView_bookname"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/imageView_bookpreview"
        android:layout_alignStart="@+id/textView_bookname"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>